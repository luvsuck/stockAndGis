<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">
    <!-- 将Bean托管给Spring -->
    <bean id="orderService" class="com.luvsic.stock.resource.OrderInterfaceImpl"></bean>
    <!-- 配置需要暴露的BeanService -->
    <jaxrs:server id="restContainer1" address="/order"> <!-- 暴露restful api 类似于前文提到的webService【暴露soap】 -->
        <jaxrs:serviceBeans>
            <!-- 相当于打包发布服务 -->
            <ref bean="orderService"/>
        </jaxrs:serviceBeans>
        <!-- 提供一个json转化，没有这个不能自动返回json jsonProvider就是前面@Bean生成的在CxfConfig -->
        <jaxrs:providers>
            <ref bean="jsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

</beans>  